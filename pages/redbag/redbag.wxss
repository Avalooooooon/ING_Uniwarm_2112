/* pages/redbag/redbag.wxss */
/* 弹窗蒙版start */
.alert-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.7;
}

.modalDlg {
    width: 83vw;
    height: 59vh;
    position: fixed;
    top: 43%;
    left: -1%;
    z-index: 9999;
    box-sizing: border-box;
    padding: 25rpx;
    margin: -370rpx 85rpx;
    background-color: #fff;
    border-radius: 0rpx;
}

.bigTitle {
    margin-top: 2vh;
    margin-bottom: 3.5vh;

    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    flex-grow: 1;
}

.paragraph {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
}

.modaltitle {
    margin-top: 2vh;
    margin-left: 4vw;
    font-size: 13px;
    color: #333333
}

.modaltext {
    margin-top: 1vh;
    margin-bottom: 3.5vh;
    margin-left: 4vw;
    font-size: 12px;
    color: #333333
}

.item {
    margin-bottom: 1.5px;
}

.hide-btn {
    position: absolute;
    top: 1vh;
    right: 1vh;
    width: 2vh;
}

.copynumber {
    width: auto;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin-bottom: 0vh;
    border-radius: 3px;
    background-color: #C99B3A;
    /* border: 1px solid #C99B3A */
}

/* 弹窗蒙版end */

.body {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.modules-scroll-view {
    display: flex;
    flex-direction: column;
}

.title {
    display: flex;
    flex-direction: row;
    justify-content: center;
    flex-grow: 1;
    margin-bottom: 2vh;
}

.usekeybutton {
    width: auto;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin-bottom: 0vh;
    border-radius: 50px;
    border: 1px solid #C99B3A
}

.redcard {
    height: 124vw;
    width: 93vw !important;
    border-radius: 0px;
    margin: 0px !important;

    display: flex;
    justify-content: center;
    /**主轴方向居中**/
    align-items: center;
    /**交叉轴方向居中，这里主轴水平，则交叉轴为竖直**/
}

.serialbutton {
    width: auto;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin-bottom: 0vh;
    border-radius: 3px;
    background-color: #C99B3A;
    /* border: 1px solid #C99B3A */
}